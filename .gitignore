/* ðŸ“± Responsive Design */
@media (max-width: 768px) {
  body {
    padding: 10px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.3rem;
  }

  p, li {
    font-size: 0.95rem;
  }

  button {
    width: 100%; /* buttons take full width on mobile */
    font-size: 18px;
  }
}

@media (max-width: 480px) {
  h1 {
